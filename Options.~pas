Const
    Rus: Array [1..32, 1..2] of Char = (('а', 'А'),('б', 'Б'),('в', 'В'),('г', 'Г'),('д', 'Д'),('е', 'Е'),('ё', 'Ё'),('ж', 'Ж'),('з', 'З'),('и', 'И'),('к', 'К'),('л', 'Л'),('м', 'М'),('н', 'Н'),('о', 'О'),('п', 'П'),('р', 'Р'),
    ('с', 'С'),('т', 'Т'),('у', 'У'),('ф', 'Ф'),('х', 'Х'),('ц', 'Ц'),('ч', 'Ч'),('ш', 'Ш'),('щ', 'Щ'),('ь', 'Ь'),('ъ', 'Ъ'),('ы', 'Ы'),('э', 'Э'),('ю', 'Ю'),('я', 'Я'));

var
  OptionsForm: TOptionsForm;
  Edited: String;
